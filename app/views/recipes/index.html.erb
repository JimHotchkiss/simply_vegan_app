
<%= render 'static/welcome' %>

<% if logged_in? %>
  <%= render 'recipes/links' %>
<% else %>


<hr>

  <div class="container">
    <p style="color:red">Search by ingredients:</p>
      <% @ingredients.each do |ingredient|  %>
        | <%= ingredient.name.downcase %>
      <% end %>
  </div>

<hr>

  <div class="container">
    <p style="color:red">Recipes:</p>
      <% @recipes.each do |recipe|  %>
        | <%= recipe.title %>
      <% end %>
  </div>
<% end %>


<hr>

  <div class="container">
    <p style="color:red">Most Comments:</p>
      <%= link_to 'most comments', most_comments_path %>
  </div>
