<%= f.label "Title" %>
<%= f.text_field :title%><br></br>

<%= f.label "Instructions" %>
<%= f.text_area :instructions %><br></br>

<%= f.label "Ingredients" %>:
<%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br></br>

<%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredients_fields|%>
  <%= ingredients_fields.label "Add Ingredient" %>:
  <%= ingredients_fields.text_field :name %><br></br>
<% end %>
<%= f.submit "Create Recipe" %>
